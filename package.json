{
  "name": "saml-sp",
  "version": "2.0.1",
  "description": "Lightweight SAML 2.0 service provider library",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": ["saml", "saml2", "sso", "identity", "authentication"],
  "license": "MIT",
  "dependencies": {
    "selfsigned": "^2.4.1",
    "xml-encryption": "^3.0.2",
    "xmlbuilder2": "^3.1.1",
    "@xmldom/xmldom": "^0.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/selfsigned": "^2.0.5",
    "@types/xml-encryption": "^1.2.4",
    "@types/xmldom": "^0.1.34",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.0"
  }
}